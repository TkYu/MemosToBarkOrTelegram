{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Memos": {
    "BaseUrl": "http://localhost:8080",
    "UserNameMap": {
      "1": "user1",
      "2": "user2"
    },
    "MessageTemplates": {
      "memos.memo.created": {
        "title": "New Memo from {creator}",
        "body": "{content}"
      },
      "memos.memo.updated": {
        "title": "Memo Updated by {creator}",
        "body": "{content}"
      }
    }
  },
  "Bark": {
    "Enabled": false,
    "ServerUrl": "https://api.day.app",
    "DeviceKeys": {
      "*": [],
      "1": [ "user1-device-key" ],
      "2": [ "user2-device-key" ]
    },
    "Icon": "",
    "Group": "Memos",
    "Sound": "",
    "Auth": null
  },
  "Telegram": {
    "Enabled": false,
    "BotToken": "your-bot-token-here",
    "ChatIds": {
      "*": [],
      "1": [ "123456789" ],
      "2": [ "987654321" ]
    },
    "ParseMode": "HTML"
  }
}